@page
@model LoginModel

@{
	ViewData["Title"] = "Log in";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>NFC Datas Management System</title>

	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
	<!-- icheck bootstrap -->
	<link rel="stylesheet" href="~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
	<!-- Theme style -->
	<link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
	<div class="login-box">
		<!-- /.login-logo -->
		<div class="card card-outline card-primary">
			<div class="card-header text-center">
				<a href="~/AdminLTE/index2.html" class="h1">NFCMS</a>
			</div>
			<div class="card-body">
				<p class="login-box-msg">Sign in to start your session</p>
				@if (!ModelState.IsValid)
				{
					<div class="alert alert-danger">
						<p>Sorry the credentials you are using are invalid.</p>
					</div>
				}
				<form id="account" method="post">
					<div class="input-group mb-3">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-envelope"></span>
							</div>
						</div>
						<input type="email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
						
					</div>
					<span asp-validation-for="Input.Email" class="text-danger"></span>

					<div class="input-group mb-3">
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="fas fa-lock"></span>
							</div>
						</div>
						<input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
						
					</div>
					<span asp-validation-for="Input.Password" class="text-danger"></span>

					<div class="row">
						<div class="col-8">
							<div class="icheck-primary">
								<label asp-for="Input.RememberMe" class="form-label">
									<input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
									@Html.DisplayNameFor(m => m.Input.RememberMe)
								</label>
							</div>
						</div>
						<!-- /.col -->
						<div class="col-4">
							<button id="login-submit" type="submit" class="w-100 btn btn-primary btn-block">Sign in</button>
						</div>
						<!-- /.col -->
					</div>
				</form>

				<p class="mb-1">
					<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
				</p>
				<p class="mb-1">
					<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
				</p>
				@* <p class="mb-0">
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
				</p> *@
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</div>
	<!-- /.login-box -->
	
	@section Scripts {
		<!-- jQuery -->
		<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
		<!-- Bootstrap 4 -->
		<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
		<!-- AdminLTE App -->
		<script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
		<partial name="_ValidationScriptsPartial" />
	}
</body>
</html>


