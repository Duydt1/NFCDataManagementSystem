@using NFC.Data.Entities
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
	ViewData["Title"] = "System Role";
}
@if (User.IsInRole("Admin"))
{
<div class="col-md-2">
	<p>
		<a asp-action="Create" class="btn btn-block bg-gradient-primary"><i class="fa fa-plus"></i> Add New Role</a>
	</p>
</div>
<div class="card">
	<div class="card-header">
		<h3 class="card-title">DataTable with default features</h3>
	</div>
	<!-- /.card-header -->
	<div class="card-body">
		<table id="example1" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Id)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>

					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Id)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-block bg-gradient-primary btn-sm"><i class="fa fa-pencil"></i> Edit</a>
						</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-block bg-gradient-warning btn-sm"><i class="fa fa-eye"></i> Details</a>
						</td>
						<td>
							<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-block bg-gradient-danger btn-sm"><i class="fa fa-trash"></i> Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
}
else
{
	<p class="text-danger">You do not have access to this page.</p>
}